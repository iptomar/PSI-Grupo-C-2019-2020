@model BackOfficeRAM.Models.Roteiro

@{
    ViewBag.Title = "Create";
}

<script>
    $(document).ready(function () {
        $('#botaoRoteiros').addClass('active');
    });
</script>

<br />
<h4> Novo Roteiro</h4>
<hr />

@using (Html.BeginForm("Create", "Roteiros", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control " } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Descrição", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Descricao, 5, 1, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Pontos de Interesse", htmlAttributes: new { @class = "control-label col-md-5" })
        <div class="col-md-12">
            


        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}