@model BackOfficeRAM.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}



<div class="jumbotron">
    @*<p><a class="btn btn-primary btn-lg" style="margin:20px;" href="@Url.Action("Create","PontosInteresse")">Criar novo Ponto de Interesse</a></p>
        <p><a class="btn btn-primary btn-lg" style="margin:20px;" href="@Url.Action("Create","Imagens")">Adicionar nova imagem</a></p>*@


    <div class="row" style="height:175px;width:100%;justify-content: center;">

        <div class="col-lg-3 grid-margin stretch-card" style="z-index:0">
            <div class="card sale-diffrence-border" onclick="javascript:window.location='https://play.google.com/store/apps/details?id=ipt.RAMTomar&hl=en_US'" style="cursor:pointer">
                <div class="card-body pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="text-primary font-weight-bold">RAM Tomar</h2>
                        <i class="fab fa-android text-dark"></i>
                    </div>
                    <div class="line-chart-row-title">Download APP</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 grid-margin stretch-card">
            <div class="card  card-border-laranja" onclick="javascript:window.location='@Url.Action("Index","PontosInteresse")'" style="cursor:pointer">
                <div class="card-body pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="text-danger font-weight-bold">@Model.NumPontos</h2>
                        <i class="fas fa-map-marker-alt text-dark"></i>
                    </div>
                    <div class="line-chart-row-title">Pontos de interesse registados</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 grid-margin stretch-card">
            <div class="card card-border-azul" onclick="javascript:window.location='@Url.Action("Index","Imagens")'" style="cursor:pointer">
                <div class="card-body pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="text-info font-weight-bold">@Model.NumImagens</h2>
                        <i class="far fa-images text-dark"></i>
                    </div>
                    <div class="line-chart-row-title">Imagens guardadas</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 grid-margin stretch-card">
            <div class="card card-border-amarelo" onclick="javascript:window.location='@Url.Action("Index","Roteiros")'" style="cursor:pointer">
                <div class="card-body pb-0">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="text-warning font-weight-bold">@Model.NumRoteiros</h2>
                        <i class="far fa-images text-dark"></i>
                    </div>
                    <div class="line-chart-row-title">Roteiros</div>
                </div>
            </div>
        </div>



    </div>


</div>


