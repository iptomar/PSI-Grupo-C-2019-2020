@model BackOfficeRAM.ViewModels.IndexAccountViewModel


<br />
<p>
    <a class="btn btn-primary" href="@Url.Action("Register","Account")">Novo utilizador</a>
</p>
<table class="table table-hover" style="background-color:#fff">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Email
        </th>

        <th>
            Função
        </th>


        <th></th>
    </tr>

    @foreach (var user in Model.Utilizadores)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => user.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>

            <td>
                @{
                    var nomeRole = string.Empty;

                    foreach (var role in Model.Funcoes)
                    {
                        if (role.Id == user.Roles.FirstOrDefault().RoleId)
                        {
                            nomeRole = role.Name;
                        }
                    }
                }
                @nomeRole
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = user.Id })
            </td>
        </tr>
    }

</table>
