@model BackOfficeRAM.Models.Imagem

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes da imagem</h2>

<div>
    <hr />
    <dl class="dl-horizontal">


        <dd>
            <img src="@Model.ConteudoImagem" alt="Alternate Text" style="height:400px" />
        </dd>
        <br />
        <dd>
            <b>Nome: </b> @Model.Nome
        </dd>
        <dd>
            <b>Autor: </b> @Model.Autor
        </dd>
        <dd>
            <b>Ponto de Interesse: </b> @Model.PontoInteresse.Nome
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id, @class="btn btn-warning" }) |
    @Html.ActionLink("Regressar à lista", "Index")
</p>
