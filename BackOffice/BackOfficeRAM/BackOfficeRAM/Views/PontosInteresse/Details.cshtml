@model BackOfficeRAM.Models.PontoInteresse

@{
    ViewBag.Title = "Details";
}

<br />
<h2>@Html.DisplayFor(model => model.Nome)</h2>

<div>
    <h4></h4>
    <hr />
    <div class="container">

        <br />
        <div class="row">
            <div class="col-sm-4">
                <div class="h3 col-sm">
                    Autor:
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.Autor)
                </div>
            </div>
            <div class="col-sm">
                <div class="h3 col-sm">
                    Localização:
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.Localizacao)
                </div>
            </div>
            <div class="col-sm">
                <div class="h3 col-sm">
                    Tipo de Edifício:
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.TipoEdificio)
                </div>
            </div>
            <div class="col-sm">
                <div class="h3 col-sm">
                    Ano de construção:
                </div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.Ano)
                </div>
            </div>

        </div>

        <br />
        <br />
        <div class="col-sm" style="text-align: justify;">
            @Html.DisplayFor(model => model.Descricao)
        </div>


        <div class="row">
            @foreach (var item in Model.Imagens)
            {
                <div class="col-sm" style="text-align: center;">
                    <div>
                        <img src="@Html.DisplayFor(modelItem => item.ConteudoImagem)" alt="Autor: @Html.DisplayFor(modelItem => item.Autor) " style="height:350px; margin:10px;margin-left:0px" />
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />
<br />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
